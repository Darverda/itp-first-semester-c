#include <stdio.h>
int main (){
    int n ;
    scanf ("%d" , &n);
    for ( int i =1 ; i<(n+1) ; ++i){
        for (int a = i -1 ; a < ((2*n - 1)/2) ; ++a ){
            printf ( "%c" , ' ') ;
        }
        for (int j = 0 ; j < 2*i-1 ; j++){
            printf("%c",'*');
        }
        printf("\n") ;
    }
    return 0 ;
}
